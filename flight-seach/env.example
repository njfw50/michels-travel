# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações de Segurança
JWT_SECRET=sua_chave_secreta_muito_segura_aqui
BCRYPT_ROUNDS=12

# Configurações de Cache
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=1000

# Configurações de Banco de Dados
DB_PATH=./databases/flight_search.db
BACKUP_DIR=./backups
BACKUP_INTERVAL=86400000

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de IA (Placeholder para APIs futuras)
AI_API_URL=https://api.openai.com/v1
AI_API_KEY=sua_chave_api_ai_aqui

# Configurações de Email (Para notificações futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app_aqui

# Configurações de Compressão
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configurações de Helmet (Segurança)
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HIDE_POWERED_BY=true

# Configurações de Upload (Para futuras funcionalidades)
UPLOAD_MAX_SIZE=5242880
UPLOAD_DEST=./uploads

# Configurações de Monitoramento
ENABLE_METRICS=true
METRICS_PORT=9090

# Configurações de Debug
DEBUG=false
DEBUG_LEVEL=error
